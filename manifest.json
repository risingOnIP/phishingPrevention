{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description" : "A chrome extension which detects and alerts users when on a phishing website.",

    "action" : {

        "default_title" : "Phishing Prevention Chrome Extension",
        "default_popup" : "popup.html"

    },

    "permissions": [
        "tabs",
        "scripting"
        ],
    
    "host_permissions":[
        "<all_urls>"
      ],

    "content_scripts" :[ 
        {
            "matches" : ["<all_urls>"],
            "js" : ["contentReal.js"]
        }
        ],

        "web_accessible_resources": [
            {
            "resources" : [ "models/js/*"],
            "matches" : ["<all_urls>"]
            }
        ],
        "content_security_policy": {
            "script-src" : "self",
            "object-src" : "self" 
        }

        
     
            
            

}
